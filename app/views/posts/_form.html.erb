


<%= simple_form_for @post do |f| %>
  <%= f.error_notification %>
   <div class="field">
      <div class="control">
        <%= f.input :post, label: "Post to the Cliq", input_html: { class: "textarea" }, 
          wrapper: false, label_html: { class: "label" }, placeholder: "Compose something amazing...", 
          autofocus: true %>
      </div>
    </div>
   <%= f.button :submit, class: "button is-primary" %>
<% end %>

