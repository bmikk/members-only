<div class="column is-one-quarter is-mobile">
  <p class="title is-5">Welcome to Cliqr. Members Only.</p> 

  <nav class="panel">
    <p class="panel-heading">Newest Kids</p>
    <% @users = User.last(5) %>
    <% @users.each do |user| %>
      <% if user_signed_in? %>
        <a class="panel-block">
          <%= user.name %>
        </a>
      <% else %>
        <a class="panel-block">
          Anonymous
        </a>
      <% end %>
    <% end %>
    
    <p class="panel-heading">Coolest Kids</p>
    <% @top_users = Post.joins(:user).group("username").order("count_all DESC").count %>
    <% @top_users.each do |user| %>
      <% if user_signed_in? %>
        <a class="panel-block">
          <%= "#{user[0]} with #{user[1]} posts" %>
        </a>
      <% else %>
        <a class="panel-block">
          Anonymous
        </a>
      <% end %>
    <% end %>

  </nav>
</div> 